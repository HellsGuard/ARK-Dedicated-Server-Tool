            <SolidColorBrush x:Key="BeigeLabel" Color="#FFE6DFD8"/>
            <SolidColorBrush x:Key="BeigeBorder" Color="#FFD8CCBC"/>
            <ContentControl x:Key="ImportButtonContent">
                <StackPanel Orientation="Horizontal" Height="27">
